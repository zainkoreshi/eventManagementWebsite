<!doctype html>

<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE-Edge">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="stylesheets/style.css">
  <title>New Events</title>
</head>

<body>

  <!-- nav bar code -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/becomeVolunteer">Become Volunteer</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- home / events container -->
  <div class="container mt-4">
    <div class="row">
      <div class="col">
        <a href="/" class="text-decoration-none text-primary">Home</a> /
        <a href="/events" class="text-decoration-none text-primary">Events</a> /
        New Event
      </div>
    </div>
  </div>

  <!-- new event form -->
  <div class="container mt-4">

    <form action="/eventsNew" method="POST">

      <div class="row">

        <div class="col">

          <div class="row mb-3">
            <div class="col-sm-10">
              <label for="eventTitle" class="col-form-label">Event Title</label>
              <input type="text" class="form-control" id="eventTitle" name="eventTitle">
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-10">
              <label for="organizer" class="col-form-label">Organizer</label>
              <input type="text" class="form-control" id="organizer" name="organizer">
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-10">
              <label for="dateTime" class="col-form-label">Datetime</label>
              <input type="datetime-local" class="form-control" id="dateTime" placeholder="06/12/2024, 13:00" name="dateTime">
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-10">
              <label for="location" class="col-form-label">Location</label>
              <input type="text" class="form-control" id="location" placeholder="Apartment, studio or floor" name="location">
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-10">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck1">
                <label class="form-check-label" for="gridCheck1">
                  Highlight
                </label>
              </div>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-10">
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
          </div>

        </div>

        <div class="col">

          <div class="row mb-3">
            <div class="col-sm-10">
              <label for="description" class="col-form-label">Description</label>
              <textarea class="form-control" id="description" rows="5" name="description"></textarea>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-10">
              <label for="quota" class="col-form-label">Quota</label>
              <input type="number" class="form-control" id="quota" placeholder="10" name="quota">
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-10">
              <label for="eventImage" class="col-form-label">Image</label>
              <input type="text" class="form-control" id="eventImage" placeholder="http://image.com/example.png" name="eventImage">
            </div>
          </div>

        </div>

      </div>


    </form>

  </div>


</body>

</html>